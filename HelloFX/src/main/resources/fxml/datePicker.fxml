<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DatePickerController">
   <children>
      <Pane fx:id="myPane" layoutX="1.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <ChoiceBox fx:id="myChoiceBox" layoutX="45.0" layoutY="272.0" prefWidth="150.0" />
            <Slider fx:id="mySlider" layoutX="45.0" layoutY="320.0" majorTickUnit="20.0" minorTickCount="1" prefHeight="25.0" prefWidth="175.0" showTickLabels="true" showTickMarks="true" value="50.0" />
            <ProgressBar fx:id="myProgressBar" layoutX="337.0" layoutY="191.0" prefWidth="200.0" progress="0.42" />
            <Button fx:id="increaseProgressBtn" layoutX="382.0" layoutY="227.0" mnemonicParsing="false" onAction="#handleIncreaseProgressBtn" text="Increase Progress" />
            <Spinner fx:id="mySpinner" layoutX="362.0" layoutY="326.0" />
            <Label fx:id="spinnerLabel" layoutX="413.0" layoutY="297.0" text="Label">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <DatePicker fx:id="myDatePicker" layoutX="47.0" layoutY="187.0" onAction="#handleMyDatePicker" promptText="Enter a date" />
      <Label fx:id="myLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="1.0" layoutY="105.0" prefHeight="18.0" prefWidth="600.0" text="Label" textAlignment="CENTER">
         <font>
            <Font size="34.0" />
         </font>
      </Label>
      <ColorPicker fx:id="myColorPicker" layoutX="47.0" layoutY="227.0" onAction="#handleMyColorPicker" />
   </children>
</AnchorPane>
